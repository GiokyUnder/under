---
const { next, prev, currentPage, lastPage } = Astro.props;
const FIRST_PAGE = 1;
const disabledNext = currentPage === lastPage;
const disabledPrev = currentPage === FIRST_PAGE;
---

<div class="container">
  <a class:list={[{ "pagination-item-inactive": disabledPrev }]} href={prev}
    >Назад</a
  >
  <a class:list={[{ "pagination-item-inactive": disabledNext }]} href={next}
    >Вперед
  </a>
</div>

<style>
  a {
    text-decoration: none;
    padding: 5px 25px;
    border-style: solid;
    border-width: 1px;
    border-color: #eb5757;
    background-color: #eb5757;
    color: #222;
    border-radius: 5px;
    font-weight: 700;
  }

  .pagination-item-inactive {
    color: #a09d9d;
    background-color: white;
  }

  .container {
    display: flex;
    justify-content: center;
    gap: 10px;
  }
</style>
