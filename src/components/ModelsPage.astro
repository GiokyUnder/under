  .btn {
    padding: 5px 25px;
    border-style: solid;
    border-width: 1px;
    border-color: #eb5757;
    border-radius: 5px;
    background-color: #eb5757;
    -webkit-transition:
      border-color 0.3s ease,
      background-color 0.3s ease;
    transition:
      border-color 0.3s ease,
      background-color 0.3s ease;
    font-weight: 700;
  }
  .btn:hover {
    border-color: #222;
    background-color: #222;
  }
  .btn.dark {
    border-color: #222;
    background-color: #222;
  }
  .btn.dark:hover {
    border-color: #eb5757;
    background-color: #eb5757;
  }
  .btn.dark.outline {
    border-color: #222;
